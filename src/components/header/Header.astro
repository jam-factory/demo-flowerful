<style lang="scss">
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 1.8rem 6rem;
    z-index: 10;
    background-color: var.$c-white;
    box-shadow: 0 1rem 1.6rem rgba(var.$c-black, 0.04);
    transition: background-color 0.3s, box-shadow 0.3s;

    @include mixin.tab {
      padding: 1.6rem 4rem;
    }

    @include mixin.sp {
      padding: 1.4rem 2rem;
    }

    &.is-transparent {
      background-color: transparent;
      box-shadow: none;
    }
  }

  .inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-family: var.$font-cav;
    font-weight: bold;
    font-size: 3.6rem;
    line-height: 1;

    @include mixin.sp {
      font-size: 2.8rem;
    }

    a {
      display: flex;
    }
  }

  .list {
    display: flex;
    align-items: center;
    gap: 3.2rem;

    @include mixin.tab {
      gap: 2.4rem;
    }

    @include mixin.sp {
      display: none;
    }
  }

  .link {
    position: relative;
    display: inline-block;
    font-family: var.$font-base;
    font-weight: 600;
    padding: 0.8rem 0;
    letter-spacing: 0.02em;

    &::after {
      content: "";
      width: 100%;
      height: 0.1rem;
      background-color: var.$c-black;
      display: block;
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      transform: scaleX(0);
      transition: all 0.3s;
    }

    @include mixin.hover {
      &:hover {
        &::after {
          transform: scaleX(1);
        }
      }
    }
  }

  .btn {
    display: flex;
    border: 0.1rem solid var.$c-black;
    padding: 1rem 3.2rem;
    font-size: 1.4rem;
    background-color: var.$c-black;
    font-family: var.$font-base;
    color: var.$c-white;
    font-weight: 600;
    transition: all 0.4s;

    @include mixin.hover {
      &:hover {
        background-color: var.$c-white;
        color: var.$c-black;
      }
    }
  }

  .hamburger-btn {
    display: none;
    position: fixed;
    top: 1.4rem;
    right: 2rem;
    width: 2.8rem;
    height: 2.8rem;
    z-index: var.$z-hamburger-btn;

    &::before,
    &::after {
      content: "";
    }

    span,
    &::before,
    &::after {
      width: 2.4rem;
      height: 0.1rem;
      background-color: var.$c-black;
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
      bottom: 0;
      margin: auto;
    }

    &::before {
      transform: translateY(-0.6rem);
    }

    &::after {
      transform: translateY(0.6rem);
    }

    @include mixin.sp {
      display: block;
    }

    &.is-open {
      right: 1.6rem;

      span,
      &::before,
      &::after {
        background-color: var.$c-white;
      }

      span {
        opacity: 0;
      }

      &::before {
        transform: rotate(45deg);
      }

      &::after {
        transform: rotate(-45deg);
      }
    }
  }
</style>