---
import { Image } from "astro:assets";
import Container from "@/components/container/Container.astro";
const {img, en, jp} = Astro.props;
---

<section class="mv">
  <div class="content">
    <Image src={img} alt={jp} />
    <Container class="container">
      <h1 class="title">
        <span>{en}</span>
        <span>{jp}</span>
      </h1>
    </Container>
  </div>
</section>

<style lang="scss">
.mv {
  padding: 8rem 0 6rem 0rem;

  @include mixin.tab {
    padding: 7.6rem 0 0 0;
  }

  @include mixin.sp {
    padding: 5.6rem 0 0 0;
  }
}

.content {
  position: relative;
  width: 100%;
  height: 50rem;

  img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  &::before {
    width: 100%;
    height: 50rem;
    position: absolute;
    left: -6rem;
    top: 6rem;
    background-color: #fff;
  }

  &::after {
    content: "";
    width: 100%;
    height: 100%;
    background-color: rgba(#000, 0.3);
    position: absolute;
    left: 0;
    top: 0;
  }
}

.container {
  height: 100%;
  display: flex;
  align-items: center;
}

.title {
  position: relative;
  z-index: 1;
  color: var.$c-white;
  display: flex;
  flex-direction: column;
  align-items: flex-start;

  span {
    &:nth-child(1) {
      font-family: var.$font-base;
      font-size: 3.6rem;
      font-weight: bold;

      @include mixin.sp {
        font-size: 2.8rem;
      }
    }

    &:nth-child(2) {
      font-size: 1.4rem;
      font-weight: 500;
      letter-spacing: 0.1em;
      margin-top: 0.8rem;

      @include mixin.sp {
        font-size: 1.2rem;
        margin-top: 0.4rem;
      }
    }
  }
}
</style>